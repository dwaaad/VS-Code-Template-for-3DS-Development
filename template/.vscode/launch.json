{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "3DS: Build & Run in Emu",
      "type": "cppvsdbg", // cppdbg : C++ (GDB/LLDB)
      "request": "launch",
      "program": "C:\\path\\to\\3DS\\emulator\\such\\as\\azahar.exe",
      "args": [
        "${workspaceFolderBasename}.3dsx"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Make"
    },
    {
      "name": "3dslink: Build & Run on Hardware",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "cmd.exe",
      "args": [
        "/c",
        "3dslink -a 3ds.ip.address.123 ${workspaceFolderBasename}.3dsx"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Make"
    }
  ]
}
